{

  "manifest_version": 2,
  "name": "terminal",
  "version": "1.0",
  "description": "Adds a dropdown terminal to all webpages",
  "author": "Ward Truyen",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/term/terminal.js", "src/term/addonterminal.js",
        "src/termext/terminal-cookies.js", "src/termext/terminal-eval.js",
        "src/termext/terminal-popvar.js", "src/termext/terminal-passw.js", "src/termext/terminal-timerdebug.js", 
        "src/termext/terminal-transfer.js", "src/termext/terminal-stresstest.js", "src/termext/terminal-variables.js"],
      "css": ["src/term/terminal.css"]
    }
  ]

}

